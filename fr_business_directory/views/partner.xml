<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="mode">extension</field>
        <field name="priority" eval="17"/>
        <field name="arch" type="xml">
            <field id="company" name="name" position="replace">
                <div style="display: flex; align-items: center;white-space:nowrap" invisible="is_company != True">
                    <field id="company" class="text-break" name="name" default_focus="1" placeholder="e.g. Lumber Inc" required="type == 'contact'" invisible="is_company != True" />
                    <button name="siret_wizard" type="object" class="oe_stat_button oe_highlight search-button prestaterre-search-button" string="Business Directory" icon="fa-search" invisible="is_company != True" />
                </div>
            </field>
        </field>
    </record>
</odoo>