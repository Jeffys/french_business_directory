<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_siret_wizard_form" model="ir.ui.view">
        <field name="name">siret.wizard.form</field>
        <field name="model">siret.wizard</field>
        <field name="arch" type="xml">
            <form>
                <h2>
                    <field name="result_count" readonly="1" /> Results Found </h2>
                <div class="pagination-controls pagination-right"
                    style="display: flex; justify-content: flex-end; align-items: center;">
                    <button name="fetch_previous_page" type="object" string="Prev"
                        class="btn btn-secondary"
                        icon="fa-arrow-left" />
                    <span class="page-count">
                        <field name="page_number" readonly="1" class="oe_inline" /> / </span>
                    <span class="page-total">
                        <field name="total_pages" readonly="1" class="oe_inline" />
                    </span>
                    <button name="fetch_next_page" type="object" class="btn btn-secondary"> Next <i
                            class="fa fa-arrow-right"></i>
                    </button>
                </div>
                <field name="result_ids" mode="tree">
                    <tree string="Results" delete="False" create="false">
                        <field name="name" />
                        <field name="social_reason" />
                        <field name="street" />
                        <field name="street2" />
                        <field name="post_code" />
                        <field name="city" />
                        <field name="department" />
                    </tree>
                </field>
                <footer>
                    <button string="Cancel" class="btn-danger" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="view_siret_wizard_result_form" model="ir.ui.view">
        <field name="name">siret.wizard.result.form</field>
        <field name="model">siret.wizard.result</field>
        <field name="arch" type="xml">
            <form string="Siret Wizard Result">
                <sheet>
                    <h2>
                        <field name="result_count" readonly="1" /> Results Found </h2>
                    <field name="matching_etablissements">
                        <tree create="false" delete="false" editable="bottom" no_open="1">
                            <field name="siret" readonly="1" />
                            <field name="computed_activite_principale"
                                style="white-space: collapse;" />
                            <field name="adresse" readonly="1" />
                            <field name="date_creation" readonly="1" />
                            <field name="etat_administratif_display" widget='badge'
                                decoration-danger="etat_administratif_display != 'en activité'"
                                decoration-success="etat_administratif_display == 'en activité'"
                                readonly="1" />
                            <button name='select_siret' string='Select' type='object'
                                class="oe_stat_button oe_highlight"
                                confirm="Are you sure want to overwrite the Data?" />
                        </tree>
                    </field>

                </sheet>
            </form>
        </field>
    </record>
    </odoo>